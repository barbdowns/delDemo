<%= render 'partials/banner' %>

<%= render 'partials/search' %>

<div class='qop-container-blue'>
    <div class="home-cards-container">
        <h2 class="home-header mb-1">Choose a DEL assessment to fill out</h2>
        <input class="form-control card-search" placeholder="Narrow assessment options" ></input>
        <div class="home-cards">
            <% (@qssActive + @qssInactive).each do |qv| %>
                <a href="/questionnaire?version=<%= qv[:id] -%>&loinc=false" 
                        class="card active-cards <%= "no-loinc" if qv[:code].nil? %> collapse show">
                    <h5 class="card-header"><%= qv[:name].sub("MDS3_0", "MDS3.0") -%></h5>
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-subtitle mb-2">
                            <%= qv[:title] -%>
                        </h6>
                        <p class="mt-auto">
                            Status: <%= qv[:status].capitalize %>
                        </p>
                        <p>
                            <% if qv[:code].nil? %>
                                No LOINC Support
                            <% else %>
                                LOINC Supported (<%= qv[:code][0]["code"] -%>)
                            <% end %>
                        </p>
                        <small class="card-text">
                            Published by <%= qv[:publisher] -%>
                        </small>
                    </div>
                </a>
            <% end %>
        </div>
    </div>

    <div class='assessment-toggles'>
        <small class="toggle-section-codes">
            Currently using 
                <strong class="current-code-cms">CMS</strong> 
            codes
            <br>
            <a class='code-toggle'>Switch to LOINC codes</a>
        </small>
    </div>
</div>